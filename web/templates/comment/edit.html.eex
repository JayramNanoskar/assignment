<%= form_for @changeset, post_comment_path(@conn, :update,@post, @comment), fn f-> %>
	<div class="form-group">
		<%= text_input f, :content, placeholder: "Enter Updated Comment", class: "form-control" %>
		<%= error_tag f, :content %>	
	</div>
	<%= submit "Save Comment", class: "btn btn-primary" %>
<% end %>				