<h4><%= @post.title %></h4	>

<h5>Comments</h5>
<ul class="collection">
	<%= for comment <- @comments do %>
		<li class="collection-item">	
			<%= comment.content%>
		</li>
	<% end %>																											
</ul>


<div class="fixed-action-btn">
	<%= link to: post_comment_path(@conn, :new, @post), class: "btn-floating btn-large waves-effect waves-light red" do %>
			<i class="material-icons">Add</i>
		<% end %>
</div>